<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:Loon.Views.Content.ImageViewer"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="Loon.Views.Content.ImageViewer.ImageViewerWindow"
        Topmost="True"
        ShowInTaskbar="False"
        PointerPressed="HideWindow"
        SystemDecorations="BorderOnly"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">

  <Window.Styles>
    <Style Selector="Button">
      <Setter Property="FontSize" Value="16" />
      <Setter Property="MinWidth" Value="40" />
      <Setter Property="FontFamily" Value="{StaticResource SymbolFont}" />
    </Style>
  </Window.Styles>

  <Grid>
    <Image
      Stretch="None"
      HorizontalAlignment="Center"
      Source="{Binding $parent[Window].Source}" />

    <StackPanel
      Spacing="5"
      Margin="5 2"
      Orientation="Horizontal"
      VerticalAlignment="Bottom"
      HorizontalAlignment="Right">

      <Button
        Content="{StaticResource CopyImageClipboardSymbol}"
        ToolTip.Tip="{StaticResource copy-image-tooltip}"
        Command="{Binding $parent[l:ImageViewerWindow].CopyImageToClipboard}" />
    </StackPanel>
  </Grid>
</Window>