<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             xmlns:vw="clr-namespace:Loon.Views"
             xmlns:ti="clr-namespace:Loon.Views.Content.TweetItem"
             x:Class="Loon.Views.Content.TimelineView">

  <ScrollViewer
    Name="ScrollViewer"
    Margin="0 0 5 0"
    HorizontalContentAlignment="Left">

    <ItemsRepeater
      Items="{Binding Timeline.StatusCollection}"
      Width="{Binding $parent[vw:MainWindow].Width}"
      ElementClearing="OnElementClearing">

      <ItemsRepeater.ItemTemplate>
        <DataTemplate>
          <ti:TweetItemView Margin="5 0 20 0" />
        </DataTemplate>
      </ItemsRepeater.ItemTemplate>
    </ItemsRepeater>
  </ScrollViewer>
</UserControl>