<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:up="clr-namespace:Loon.Views.Content.UserProfile"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="50"
             x:Class="Loon.Views.Content.UserProfile.UserProfileBackBar">

  <Button
    Padding="0 10"
    Classes="inline"
    HorizontalContentAlignment="Left"
    Background="{DynamicResource ThemeAccentBrush4}"
    Command="{Binding $parent[Window].DataContext.SetUser}">

    <Grid ColumnDefinitions="Auto,*">

      <TextBlock
        Margin="10 0"
        VerticalAlignment="Center"
        Text="{StaticResource PreviousSymbol}"
        FontFamily="{StaticResource SymbolFont}" />

      <StackPanel Grid.Column="1">
        <up:UserProfileName />
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="{Binding Tweets, Converter={StaticResource CountConverter}}" />
          <TextBlock Text=" Tweets" />
        </StackPanel>
      </StackPanel>
    </Grid>
  </Button>
</UserControl>