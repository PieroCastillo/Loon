<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             xmlns:up="clr-namespace:Loon.Views.Content.UserProfile"
             DataContext="{Binding $parent[Window].DataContext.User}"
             x:Class="Loon.Views.Content.UserProfile.UserProfileView">

  <StackPanel>

    <up:UserProfileBackBar />
    <up:UserProfileBanner />

    <StackPanel Margin="15 10">
      <up:UserProfileName />
      <TextBlock Text="{Binding ScreenName, StringFormat='@{0}'}" />

      <TextBlock Text="{Binding Description}" Classes="normal" Margin="0 10 0 0" />
    </StackPanel>
  </StackPanel>
</UserControl>