<UserControl
  x:Class="Loon.Views.Content.UserProfile.UserProfileMoreButton"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="200"
  d:DesignWidth="200"
  mc:Ignorable="d">

  <Button
    Classes="inline"
    Command="{Binding $parent[UserControl].OpenMenu}">

    <Button.ContextMenu>
      <ContextMenu
        PlacementMode="Left"
        VerticalOffset="15">

        <MenuItem Header="This" />
        <MenuItem Header="is" />
        <MenuItem Header="a" />
        <MenuItem Header="test" />
      </ContextMenu>
    </Button.ContextMenu>

    <Border
      Width="28"
      Height="28"
      BorderBrush="{StaticResource TwitterBlueBrush}"
      BorderThickness="2"
      CornerRadius="30">
      <TextBlock
        Margin="0,3.4,0,0"
        FontFamily="{StaticResource SymbolFont}"
        Text="{StaticResource EllipsisSymbol}"
        TextAlignment="Center" />
    </Border>
  </Button>
</UserControl>