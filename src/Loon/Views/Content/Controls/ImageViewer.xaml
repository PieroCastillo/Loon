<Window
  x:Class="Loon.Views.Content.Controls.ImageViewer"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:l="clr-namespace:Loon.Views.Content.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="400"
  PointerPressed="HideWindow"
  ShowInTaskbar="False"
  SizeToContent="WidthAndHeight"
  SystemDecorations="BorderOnly"
  Topmost="True"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <Window.Styles>
    <Style Selector="Button">
      <Setter Property="FontSize" Value="16" />
      <Setter Property="MinWidth" Value="40" />
      <Setter Property="FontFamily" Value="{StaticResource SymbolFont}" />
    </Style>
  </Window.Styles>

  <Image
    HorizontalAlignment="Center"
    Source="{Binding $parent[Window].Source}"
    Stretch="None" />
</Window>