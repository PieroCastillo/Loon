<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             Opacity="{DynamicResource Dim1}"
             x:Class="Loon.Views.Content.Timelines.TweetItem.TweetItemRetweetedBy">

  <StackPanel
    Orientation="Horizontal"
    Spacing="3">

    <TextBlock
      Text="{DynamicResource RetweetSymbol}"
      FontFamily="{DynamicResource SymbolFont}" />

    <Button
     Content="{Binding User.ScreenName, StringFormat='@{0}'}"
     Classes="inline"
     Command="{Binding $parent[Window].DataContext.SetUser}"
     CommandParameter="{Binding User.ScreenName}" />

    <TextBlock Text="{DynamicResource tweet-retweeted}" />
  </StackPanel>
</UserControl>