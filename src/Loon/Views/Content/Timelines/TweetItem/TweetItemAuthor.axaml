<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sv="clr-namespace:Loon.Services"
             xmlns:co="clr-namespace:Loon.Views.Content.Controls"
             xmlns:tl="clr-namespace:Loon.Views.Content.Timelines"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             x:Class="Loon.Views.Content.Timelines.TweetItem.TweetItemAuthor">

  <WrapPanel Orientation="Horizontal">
    <Button
      Classes="inline"
      Content="{Binding User.Name}"
      FontWeight="Bold"
      Opacity="{DynamicResource Dim0}"
      Command="{Binding $parent[Window].DataContext.SetUser}"
      CommandParameter="{Binding User.ScreenName}" />

    <TextBlock
      Text="✓"
      IsVisible="{Binding User.Verified}"
      FontWeight="Bold"
      Opacity="{DynamicResource Dim0}"
      Margin="5 0 0 0"
      Foreground="{StaticResource TwitterBlueBrush}" />

    <TextBlock
      Text="{Binding User.ScreenName, StringFormat='@{0}'}"
      Opacity="{DynamicResource Dim1}" />

    <TextBlock
      Text="•"
      Margin="5 0"
      Opacity="{DynamicResource Dim1}" />

    <co:Hyperlink
      Text="{Binding CreatedDate, Converter={StaticResource TimeAgo}}"
      Link="{Binding StatusLink}" />
  </WrapPanel>
</UserControl>