<UserControl
  x:Class="Loon.Views.Content.Timelines.TweetItem.TweetItemQuoted"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:l="clr-namespace:Loon.Views.Content.Timelines.TweetItem"
  xmlns:m="clr-namespace:Loon.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="300"
  mc:Ignorable="d">

  <Border
    Margin="0,5"
    Padding="10,0"
    BorderBrush="{DynamicResource ThemeBorderLowBrush}"
    BorderThickness="0.6,0">

    <StackPanel>
      <l:TweetItemAuthor />
      <l:TweetItemText />
      <l:TweetItemTranslate />

      <l:TweetItemImage
        Name="TweetItemImage"
        Margin="0,5,5,5"
        DataContext="{Binding ExtendedEntities}"
        IsVisible="{Binding !$parent[m:MainWindow].DataContext.Settings.HideImages}" />
    </StackPanel>
  </Border>
</UserControl>