<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="45" d:DesignHeight="45"
             xmlns:vm="clr-namespace:Loon.ViewModels.Content.TweetItem"
             HorizontalContentAlignment="Center"
             x:Class="Loon.Views.Content.Timelines.TweetItem.TweetItemProfileImage">

  <Image
    Width="44"
    Height="44"
    Cursor="Hand"
    DataContextChanged="UpdateImage"
    PointerPressed="OnPointerPressed">
    <Image.Clip>
      <EllipseGeometry
        RadiusX="22"
        RadiusY="22"
        Center="22,22" />
    </Image.Clip>
  </Image>
</UserControl>