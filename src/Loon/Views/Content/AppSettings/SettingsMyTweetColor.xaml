<UserControl
  x:Class="Loon.Views.Content.AppSettings.SettingsMyTweetColor"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="50"
  d:DesignWidth="210"
  mc:Ignorable="d">

  <DockPanel>
    <TextBlock
      Margin="0,0,10,0"
      VerticalAlignment="Center"
      Text="{StaticResource my-tweet-color}"
      ToolTip.Tip="{StaticResource my-tweet-color-tooltip}" />

    <TextBox
      VerticalAlignment="Center"
      Text="{Binding MyTweetColor}"
      TextWrapping="NoWrap" />
  </DockPanel>
</UserControl>