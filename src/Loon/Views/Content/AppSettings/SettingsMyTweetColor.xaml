<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="210" d:DesignHeight="50"
             x:Class="Loon.Views.Content.AppSettings.SettingsMyTweetColor">

  <DockPanel>
    <TextBlock
      Text="{StaticResource my-tweet-color}"
      Margin="0,0,10,0"
      VerticalAlignment="Center"
      ToolTip.Tip="{StaticResource my-tweet-color-tooltip}" />

    <TextBox
      Text="{Binding MyTweetColor}"
      TextWrapping="NoWrap"
      VerticalAlignment="Center" />
  </DockPanel>
</UserControl>