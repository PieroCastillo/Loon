<UserControl
  x:Class="Loon.Views.Content.AppSettings.SettingsTheme"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="210"
  mc:Ignorable="d">

  <StackPanel Spacing="5">
    <TextBlock Text="{StaticResource theme-title}" />

    <Separator />

    <UniformGrid Columns="3">

      <RadioButton
        Content="{StaticResource theme-light}"
        GroupName="t"
        IsChecked="{Binding Theme, Converter={StaticResource CompareTo}, ConverterParameter=light}" />

      <RadioButton
        Content="{StaticResource theme-dark}"
        GroupName="t"
        IsChecked="{Binding Theme, Converter={StaticResource CompareTo}, ConverterParameter=dark}" />
    </UniformGrid>
  </StackPanel>
</UserControl>