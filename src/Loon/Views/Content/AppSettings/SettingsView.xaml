<UserControl
  x:Class="Loon.Views.Content.AppSettings.SettingsView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:i="clr-namespace:Loon.Interfaces"
  xmlns:l="clr-namespace:Loon.Views.Content.AppSettings"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="850"
  d:DesignWidth="210"
  DataContext="{Binding Source={x:Type i:ISettings}, Converter={StaticResource VML}, Mode=OneTime}"
  mc:Ignorable="d">

  <UserControl.Styles>
    <Style Selector="TextBlock">
      <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
  </UserControl.Styles>

  <ScrollViewer>
    <StackPanel
      Width="210"
      Spacing="12">

      <l:SettingsTitle />
      <l:SettingsCheckboxes />
      <l:SettingsFontSize />
      <l:SettingsTheme />
      <l:SettingsMyTweetColor />

      <Separator />

      <l:SettingsSignOut />
      <l:SettingsDonate />
      <l:SettingsOpenSettings />

      <Separator />

      <l:SettingsInfo HorizontalAlignment="Center" />

      <Separator />

      <l:SettingsTips />
    </StackPanel>
  </ScrollViewer>
</UserControl>