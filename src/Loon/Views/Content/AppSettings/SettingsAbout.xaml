<UserControl
  x:Class="Loon.Views.Content.AppSettings.SettingsAbout"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:c="clr-namespace:Loon.Views.Content.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:m="clr-namespace:Loon.Models"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="70"
  d:DesignWidth="210"
  mc:Ignorable="d">

  <StackPanel
    HorizontalAlignment="Center"
    Spacing="3">

    <TextBlock
      HorizontalAlignment="Center"
      Text="{x:Static m:VersionInfo.Version}" />

    <c:Hyperlink
      Link="https://mike-ward.net"
      Text="https://mike-ward.net" />

    <TextBlock Text="{x:Static m:VersionInfo.Copyright}" />
  </StackPanel>
</UserControl>