<UserControl
  x:Class="Loon.Views.Content.AppSettings.BulletItem"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="35"
  d:DesignWidth="200"
  mc:Ignorable="d">

  <Grid
    Margin="0,0,0,2"
    ColumnDefinitions="15,*">

    <TextBlock
      Grid.Column="0"
      Text="&#x25cf;" />

    <TextBlock
      Grid.Column="1"
      Text="{Binding $parent[UserControl].BulletText}"
      TextWrapping="Wrap" />
  </Grid>
</UserControl>