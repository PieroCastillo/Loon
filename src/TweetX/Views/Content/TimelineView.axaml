<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vw="clr-namespace:TweetX.Views"
             xmlns:ti="clr-namespace:TweetX.Views.Content.TweetItem"
             x:Class="TweetX.Views.Content.TimelineView">

  <ScrollViewer HorizontalContentAlignment="Left">
    <ItemsControl Items="{Binding Timeline.StatusCollection}"
                  ClipToBounds="True"
                  Width="{Binding Width, RelativeSource={RelativeSource AncestorType=vw:MainWindow}}">

      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <VirtualizingStackPanel Focusable="True" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>

      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <ti:TweetItemView Margin="5 0 20 0" />
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </ScrollViewer>
</UserControl>