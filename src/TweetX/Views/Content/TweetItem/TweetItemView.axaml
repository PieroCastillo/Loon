<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l="clr-namespace:TweetX.Views.Content.TweetItem"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TweetX.Views.Content.TweetItem.TweetItemView">

  <Grid ColumnDefinitions="Auto,*">
    <!--  Column 1  -->

    <l:TweetItemProfileImage DataContext="{Binding OriginatingStatus}" Margin="0 0 7 0" VerticalAlignment="Top" />

    <!--  Column 2  -->

    <StackPanel Grid.Column="1" Margin="0 0 0 10">
      <l:TweetItemRetweetedBy DataContext="{Binding}" IsVisible="{Binding IsRetweet}" />
      <l:TweetItemAuthor DataContext="{Binding OriginatingStatus}" />
      <l:TweetItemText DataContext="{Binding OriginatingStatus}" />
      <l:TweetItemImage DataContext="{Binding OriginatingStatus.ExtendedEntities}" />
    </StackPanel>
  </Grid>
</UserControl>