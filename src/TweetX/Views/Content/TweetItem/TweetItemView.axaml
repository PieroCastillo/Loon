<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TweetX.Views.Content.TweetItem.TweetItemView">

  <StackPanel Margin="0 0 0 10">
    <StackPanel Orientation="Horizontal">
      <TextBlock Text="{Binding OriginatingStatus.User.ScreenName}"
                 Foreground="{DynamicResource ThemeAccentBrush}"
                 FontWeight="Bold" />

      <TextBlock Text="@" Margin="5 0 0 0" />
      <TextBlock Text="{Binding OriginatingStatus.User.Name}" />
    </StackPanel>

    <TextBlock Text="{Binding OriginatingStatus.FullText}"
               Opacity="0.85"
               TextWrapping="Wrap" />
  </StackPanel>
</UserControl>